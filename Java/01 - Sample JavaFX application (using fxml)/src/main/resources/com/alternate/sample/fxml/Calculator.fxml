    <AnchorPane prefHeight="256.0" prefWidth="530.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <TextField fx:id="textNum1" layoutX="172.0" layoutY="36.0" prefHeight="26.0" prefWidth="308.0"/>
        <TextField fx:id="textNum2" layoutX="172.0" layoutY="79.0" prefHeight="26.0" prefWidth="308.0"/>
        <Button layoutX="51.0" layoutY="169.0" mnemonicParsing="false"
                onAction="#buttonAddClicked" prefHeight="56.0" prefWidth="427.0" text="Add"/>
        <Label layoutX="54.0" layoutY="41.0" text="Number1"/>
        <Label layoutX="54.0" layoutY="84.0" text="Number2"/>
        <Label layoutX="54.0" layoutY="128.0" text="Summation"/>
        <Label fx:id="labelTotal" layoutX="172.0" layoutY="128.0"/>
    </AnchorPane>
</GridPane>
